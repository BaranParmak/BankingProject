<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Line?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="client.ui.controllers.TransferController"
            prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: #121212;"
            stylesheets="/css/style.css">

    <!-- Orta bölge - sola kaydırılmış -->
    <VBox alignment="TOP_CENTER" spacing="15"
          AnchorPane.leftAnchor="200.0"
          AnchorPane.rightAnchor="300.0"
          AnchorPane.topAnchor="50.0"
          AnchorPane.bottomAnchor="50.0">

        <!-- Logo -->
        <ImageView fitWidth="120" fitHeight="120" styleClass="logo">
            <Image url="/images/logo.png"/>
        </ImageView>

        <Label text="Money Transfer" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #ccff00;"/>
        <Label text="Please provide the following informations to realise money transfer."
               style="-fx-font-size: 14px; -fx-text-fill: #aaaaaa;" wrapText="true" textAlignment="CENTER"/>

        <Region prefHeight="20"/>

        <!-- User Card - 400px sabit genişlik -->
        <HBox styleClass="user-card" alignment="CENTER_LEFT" spacing="15" prefWidth="400" maxWidth="400">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <VBox>
                <Label fx:id="userNameLabel" text="User Name" style="-fx-font-size: 16px; -fx-text-fill: black; -fx-font-weight: bold;"/>
                <Label fx:id="balanceLabel" text="Current Balance: $0.00" style="-fx-font-size: 14px; -fx-text-fill: black;"/>
            </VBox>
        </HBox>

        <!-- Çizgi - 400px sabit genişlik -->
        <Separator prefWidth="400" maxWidth="400" />

        <Region prefHeight="20"/>

        <!-- Form alanları - 400px sabit genişlik -->
        <TextField fx:id="receiverAccountField" promptText="Enter Receiver Account Number"
                   styleClass="text-field" prefWidth="400" maxWidth="400"/>

        <TextField fx:id="amountField" promptText="Enter Transfer Amount"
                   styleClass="text-field" prefWidth="400" maxWidth="400"/>

        <Region prefHeight="20"/>

        <!-- Transfer ve Back butonları yan yana -->
        <HBox alignment="CENTER" spacing="15">
            <Button text="Cancel" onAction="#handleBack"
                    styleClass="secondary-button" prefWidth="150"/>

            <Button text="Transfer" onAction="#handleTransfer"
                    styleClass="primary-button" prefWidth="150"/>
        </HBox>

        <Label fx:id="statusLabel" textFill="RED" alignment="CENTER"/>
    </VBox>

    <!-- Confirmation dialog (artık kullanılmayacak ama kaldırmıyoruz) -->
    <StackPane fx:id="confirmationDialog" visible="false" style="-fx-background-color: rgba(0,0,0,0.7);"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <VBox styleClass="dialog-box" alignment="CENTER" spacing="15" maxWidth="400" maxHeight="200">
            <Label text="Are you sure you want to proceed with this transaction?"
                   style="-fx-font-size: 16px; -fx-text-fill: #ccff00; -fx-text-alignment: center;" wrapText="true"/>
            <Label text="This action cannot be undone." style="-fx-font-size: 12px; -fx-text-fill: #aaaaaa;"/>
            <HBox alignment="CENTER" spacing="20">
                <Button text="Reject" onAction="#handleReject" styleClass="reject-button" prefWidth="100"/>
                <Button text="Accept" onAction="#handleAccept" styleClass="accept-button" prefWidth="100"/>
            </HBox>
        </VBox>
    </StackPane>
</AnchorPane>