<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="client.ui.controllers.LoginController"
           prefHeight="600.0" prefWidth="900.0"
           stylesheets="/css/style.css">

    <AnchorPane>
        <!-- Main content -->
        <VBox alignment="CENTER" spacing="15" maxWidth="500" AnchorPane.leftAnchor="200"
              AnchorPane.rightAnchor="200" AnchorPane.topAnchor="100" AnchorPane.bottomAnchor="100">

            <!-- Logo - Enlarged -->
            <ImageView fitWidth="240" fitHeight="240" styleClass="logo">
                <Image url="/images/logo.png"/>
            </ImageView>

            <Label text="Login" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #ccff00;"/>
            <Label text="Welcome back! Please log in to access your account."
                   style="-fx-font-size: 14px; -fx-text-fill: #aaaaaa;" wrapText="true" textAlignment="CENTER"/>

            <Region prefHeight="20"/>

            <TextField fx:id="usernameField" promptText="Enter your Username" styleClass="text-field"/>
            <PasswordField fx:id="passwordField" promptText="Enter your Password" styleClass="password-field"/>

            <HBox alignment="CENTER_RIGHT">
                <Label fx:id="forgotPasswordLink" text="Forgot Password?" style="-fx-text-fill: #ccff00; -fx-cursor: hand;"/>
            </HBox>

            <Region prefHeight="10"/>

            <Button fx:id="loginButton" text="Login" onAction="#handleLogin"
                    styleClass="primary-button" maxWidth="Infinity"/>

            <Button fx:id="registerButton" text="Register" onAction="#handleRegister"
                    styleClass="secondary-button" maxWidth="Infinity"/>

            <Label fx:id="statusLabel" textFill="RED" alignment="CENTER"/>
        </VBox>
    </AnchorPane>
</StackPane>